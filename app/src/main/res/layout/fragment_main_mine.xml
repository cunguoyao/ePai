<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_color">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:orientation="vertical"
                    android:background="@drawable/mine_top_bg">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_150">
                        <RelativeLayout
                            android:id="@+id/account_image_frame"
                            android:layout_width="@dimen/dp_78"
                            android:layout_height="@dimen/dp_78"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_centerVertical="true"
                            android:background="@drawable/mine_avatar_bg">
                            <ImageView
                                android:id="@+id/account_image"
                                android:layout_width="@dimen/dp_78"
                                android:layout_height="@dimen/dp_78"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/account_name"
                            android:layout_toRightOf="@+id/account_image_frame"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_78"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:text="登录/注册"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="@color/transparent_4c"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="拍卖0"/>
                        <TextView
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="|"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="优惠券0"/>
                        <TextView
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="|"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="收藏0"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:clickable="true"
                        android:background="@drawable/common_list_item_bg">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:textColor="@color/b_33"
                            android:textSize="@dimen/dp_15"
                            android:text="我的订单"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_15"
                            android:drawableRight="@drawable/indicate_right"
                            android:drawablePadding="@dimen/dp_5"
                            android:textColor="@color/b_99"
                            android:textSize="@dimen/dp_12"
                            android:text="查看全部"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_80"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/mine_wait_pay"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:background="@drawable/common_list_item_noline_bg">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/mine_icon_wait_pay"/>
                            <TextView
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="待付款"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/mine_wait_deliver"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:background="@drawable/common_list_item_noline_bg">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/mine_icon_wait_deliver"/>
                            <TextView
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="待发货"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/mine_wait_receive"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:background="@drawable/common_list_item_noline_bg">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/mine_icon_wait_receive"/>
                            <TextView
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="待收货"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/mine_paimai"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:background="@drawable/common_list_item_noline_bg">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/mine_icon_paimai"/>
                            <TextView
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="拍卖订单"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/mine_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:clickable="true"
                    android:background="@drawable/common_list_item_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/b_33"
                        android:textSize="@dimen/dp_15"
                        android:text="地址管理"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:drawableRight="@drawable/indicate_right"
                        android:drawablePadding="@dimen/dp_5"
                        android:textColor="@color/b_99"
                        android:textSize="@dimen/dp_12"
                        android:text=""/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:clickable="true"
                    android:background="@drawable/common_list_item_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/b_33"
                        android:textSize="@dimen/dp_15"
                        android:text="售后说明"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:drawableRight="@drawable/indicate_right"
                        android:drawablePadding="@dimen/dp_5"
                        android:textColor="@color/b_99"
                        android:textSize="@dimen/dp_12"
                        android:text=""/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:clickable="true"
                    android:background="@drawable/common_list_item_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/b_33"
                        android:textSize="@dimen/dp_15"
                        android:text="账户安全"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:drawableRight="@drawable/indicate_right"
                        android:drawablePadding="@dimen/dp_5"
                        android:textColor="@color/b_99"
                        android:textSize="@dimen/dp_12"
                        android:text=""/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:clickable="true"
                    android:background="@drawable/common_list_item_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/b_33"
                        android:textSize="@dimen/dp_15"
                        android:text="我的消息"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:drawableRight="@drawable/indicate_right"
                        android:drawablePadding="@dimen/dp_5"
                        android:textColor="@color/b_99"
                        android:textSize="@dimen/dp_12"
                        android:text=""/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:clickable="true"
                    android:background="@drawable/common_list_item_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/b_33"
                        android:textSize="@dimen/dp_15"
                        android:text="关于我们"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:drawableRight="@drawable/indicate_right"
                        android:drawablePadding="@dimen/dp_5"
                        android:textColor="@color/b_99"
                        android:textSize="@dimen/dp_12"
                        android:text=""/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>